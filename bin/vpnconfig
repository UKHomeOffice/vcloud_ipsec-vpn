#!/usr/bin/env ruby

require 'optparse'
require 'methadone'
require 'vpnconfig.rb'
require 'yaml'
require 'nokogiri'
require 'vpnconfig'

class App
  include Methadone::Main
  include Methadone::CLILogging

# the main block
  main do |vpn_conf, output_path|
    # TODO: When this is actually doing the API call as well should be able to stop saving the xml file and just return it instead
    input_config = YAML.load_file(vpn_conf)
    Vpnconfig::Generator.new.generate_xml(input_config, output_path)
  end

  # supplemental methods here

  # Declare command-line interface here

  description "Generates XML to configure a VPN, based on a yaml file"
  #
  # Accept flags via:
  # on("--flag VAL","Some flag")
  # options[flag] will contain VAL
  #
  # Specify switches via:
  # on("--[no-]switch","Some switch")
  #
  # Or, just call OptionParser methods on opts
  #
  # Require an argument
  arg :vpn_conf, "path to the yaml file containing the vpn config details"
  arg :output_path, "path to output xml file to"
  #
  # # Make an argument optional
  # arg :optional_arg, :optional

  version Vpnconfig::VERSION

  use_log_level_option :toggle_debug_on_signal => 'USR1'

  go!
end
